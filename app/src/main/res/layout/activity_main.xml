<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.freelance.jptalusan.linearops.Activities.MainActivity">

            <com.freelance.jptalusan.linearops.Views.AutoResizeTextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="LinearX"
                android:textAlignment="center"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textAllCaps="true"
                android:id="@+id/autoResizeTextView2"
                app:layout_constraintBottom_toTopOf="@+id/linearEquality"
                app:layout_constraintVertical_chainStyle="spread" />

            <Button
                android:id="@+id/linearEquality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Linear Equations"
                app:layout_constraintTop_toBottomOf="@+id/autoResizeTextView2"
                app:layout_constraintBottom_toTopOf="@+id/level2"
                app:layout_constraintStart_toStartOf="@+id/level2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="@+id/level2"
                tools:layout_editor_absoluteX="74dp" />

            <Button
                android:id="@+id/level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 2"
                app:layout_constraintTop_toBottomOf="@+id/linearEquality"
                app:layout_constraintBottom_toTopOf="@+id/level3"
                app:layout_constraintStart_toStartOf="@+id/level3"
                android:layout_marginStart="0dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="@+id/level3"
                tools:layout_editor_absoluteX="108dp" />

            <Button
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/level2"
                app:layout_constraintEnd_toStartOf="@+id/linearInequality"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                tools:layout_editor_absoluteX="108dp" />

            <Button
                android:id="@+id/level4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="level 4"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="332dp"
                app:layout_constraintTop_toBottomOf="@+id/autoResizeTextView2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/level5"
                app:layout_constraintStart_toEndOf="@+id/linearEquality"
                app:layout_constraintEnd_toEndOf="@+id/level5"
                app:layout_constraintStart_toStartOf="@+id/level5" />

            <Button
                android:id="@+id/level5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="level 5"
                tools:layout_editor_absoluteY="98dp"
                tools:layout_editor_absoluteX="332dp"
                app:layout_constraintTop_toBottomOf="@+id/level4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/linearInequality"
                app:layout_constraintStart_toEndOf="@+id/level2"
                app:layout_constraintEnd_toEndOf="@+id/linearInequality"
                app:layout_constraintStart_toStartOf="@+id/linearInequality" />

            <Button
                android:id="@+id/linearInequality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Linear Inequality"
                tools:layout_editor_absoluteY="167dp"
                tools:layout_editor_absoluteX="298dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/level5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/level3"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>